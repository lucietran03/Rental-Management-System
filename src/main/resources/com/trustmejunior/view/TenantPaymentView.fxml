<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="960.0" stylesheets="@../css/global.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trustmejunior.view.Tenant.TenantPaymentView">
    <top>
        <HBox alignment="CENTER" styleClass="header">
            <Label styleClass="text-header" text="Payment Details" />
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
            </padding>

            <HBox spacing="10">
                <Label text="Amount:" />
                <Label fx:id="amount" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Due Date:" />
                <Label fx:id="dueDate" style="-fx-font-weight: bold" />
            </HBox>
         <HBox spacing="10">
            <children>
               <Label text="Paid Date:" />
               <Label fx:id="paymentDate" style="-fx-font-weight: bold" />
            </children>
         </HBox>
            <HBox spacing="10">
                <Label text="Payment Method:" />
                <Label fx:id="method" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Status:" />
                <Label fx:id="status" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Rental Agreement:" />
                <Label fx:id="rentalAgreement" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Tenant:" />
                <Label fx:id="tenant" style="-fx-font-weight: bold" />
            </HBox>

            <HBox alignment="CENTER" spacing="30.0">
                <Button fx:id="returnButton" styleClass="button-primary" text="Return" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
