<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="960.0" stylesheets="@../css/global.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trustmejunior.view.Manager.ManagerProfileView">

    <top>
        <HBox alignment="CENTER" styleClass="header">
            <Label styleClass="text-header" text="Manager Profile" />
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
            </padding>

            <HBox spacing="10">
                <Label text="Full Name:" />
                <Label fx:id="fullName" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Email:" />
                <Label fx:id="email" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Date of Birth:" />
                <Label fx:id="dob" style="-fx-font-weight: bold" />
            </HBox>
            <HBox spacing="10">
                <Label text="Role:" />
                <Label fx:id="role" style="-fx-font-weight: bold" />
            </HBox>

            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="editProfileButton" styleClass="button-primary" text="Edit Profile" />
                <Button fx:id="returnButton" styleClass="button-secondary" text="Return" />
            </VBox> 
        </VBox>      
    </center>

</BorderPane>
